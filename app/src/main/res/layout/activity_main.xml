<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kalkulator Ananta Risky Susanto"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:padding="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIM: 225150601111013"
        android:textSize="16sp"
        android:textColor="#000"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginBottom="16dp"/>

    <!-- Display -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/display_text"
        android:textSize="36sp"
        android:padding="16dp"
        android:background="#E0E0E0"
        android:textColor="#000"
        android:layout_marginBottom="16dp"
        android:textStyle="bold" />

    <!-- Number and Operation Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_gravity="center"
        android:paddingTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Row 1 -->
        <Button android:id="@+id/button7" android:text="@string/button_7" style="@style/CalculatorButton"/>
        <Button android:id="@+id/button8" android:text="@string/button_8" style="@style/CalculatorButton"/>
        <Button android:id="@+id/button9" android:text="@string/button_9" style="@style/CalculatorButton"/>
        <Button android:id="@+id/buttonDivide" android:text="@string/button_divide" style="@style/CalculatorButton"/>

        <!-- Row 2 -->
        <Button android:id="@+id/button4" android:text="@string/button_4" style="@style/CalculatorButton"/>
        <Button android:id="@+id/button5" android:text="@string/button_5" style="@style/CalculatorButton"/>
        <Button android:id="@+id/button6" android:text="@string/button_6" style="@style/CalculatorButton"/>
        <Button android:id="@+id/buttonMultiply" android:text="@string/button_multiply" style="@style/CalculatorButton"/>

        <!-- Row 3 -->
        <Button android:id="@+id/button1" android:text="@string/button_1" style="@style/CalculatorButton"/>
        <Button android:id="@+id/button2" android:text="@string/button_2" style="@style/CalculatorButton"/>
        <Button android:id="@+id/button3" android:text="@string/button_3" style="@style/CalculatorButton"/>
        <Button android:id="@+id/buttonMinus" android:text="@string/button_minus" style="@style/CalculatorButton"/>

        <!-- Row 4 -->
        <Button android:id="@+id/button0" android:text="@string/button_0" style="@style/CalculatorButton"/>
        <Button android:id="@+id/buttonClear" android:text="@string/button_clear" style="@style/CalculatorButton"/>
        <Button android:id="@+id/buttonEqual" android:text="@string/button_equal" style="@style/CalculatorButton"/>
        <Button android:id="@+id/buttonPlus" android:text="@string/button_plus" style="@style/CalculatorButton"/>

    </GridLayout>
</LinearLayout>
